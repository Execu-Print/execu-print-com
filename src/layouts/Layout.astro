---
import Banner from '../components/Banner.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>ExecuPrint{title ? ` - ${title}`: ''}</title>
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,1,0" />


		<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
	</head>
	<body>
		<div class="filter"></div>
		<Banner></Banner>
		<div class="outlet">
			<slot />
		</div>
		<Footer></Footer>
	</body>
</html>
<style is:global>
	html, body {
		margin: 0;
	}
	* {
		/* font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif; */
		font-family: "Roboto Condensed", Impact, sans-serif;
	}

	.color-red {
		color: red;
	}

	.gallery {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
	}

body {
	background: radial-gradient(circle at bottom ,#eee, #eee 10%,transparent 10%, transparent 20%, #eee 20%, #eee 30%, transparent 30%, transparent 40%, #eee 40%, #eee 50%, transparent 50%, transparent 60%, #eee 60%, #eee 70%, transparent 70%, transparent 80%, #eee 80%, #eee 90%, transparent 90%);
        background-size: 3em 3em;
        background-color: #ffffff;
        opacity: 1;
		/* backdrop-filter: blur(3.5px); */
}



</style>
<style>
	.filter {
		position:fixed;
		width: 100%;
		height: 100%;
		backdrop-filter: blur(3.5px);
		z-index: -1;
	}
	.outlet {
		min-height: 85vh;
		padding: 20px 10px;

		/* backdrop-filter: blur(3.5px); */
